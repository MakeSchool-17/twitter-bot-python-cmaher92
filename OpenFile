import random

sentence = []

with open('Day_2/wordz', encoding='utf-8') as a_file:
    lists = a_file.readlines()
    words = []
    for word in lists:
        word = word.split('\n')[0]
        words.append(word)
    wordsLength = (len(words))
    print(words)
    random = random.sample(words, 5)
    print(random)
    sentence.append(random)
